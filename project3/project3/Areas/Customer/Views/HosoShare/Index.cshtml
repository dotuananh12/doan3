@model IEnumerable<project3.Models.shareFile>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Customer/Views/Shared/layoutuse.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 style="padding-bottom:15px; color:red" class="box-title">Danh Sách Hiển Thị</h3>
                    </div>
                <div>
                    <table id="" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>
                                    ID share
                                </th>
                                <th>
                                    ID nhận
                                </th>
                                <th>
                                    Mã hồ sơ
                                </th>
                                <th>
                                    Nội Dung
                                </th>  
                                                       
                            </tr>
                        </thead>   
                        <tbody id="table"></tbody>                    
                    </table>
                </div>
            </div>
        </div>
    </div>

</section>
@section ScriptHome{
    <script>
        $(function () {
            _getdanh();
        })
        function _getdanh() {
            $.ajax({
                url: '/Customer/HosoShare/hsshare',
                type: 'post',
                datatype: 'json',
                success: function (data) {
                    var html = '';
                    console.log(data.dt);
                    $.each(data.dt, function (key, item) {
                        html += '<tr>';
                        html += '<td>' + item.codeShare + '</td>';
                        html += '<td>' + item.codeTake + '</td>';
                        html += '<td>' + item.hosoID + '</td>';
                        html += '<td>' + item.noidung + '</td>';
                     
                        html += '</td>';
                        html += '</tr>';
                    });
                    $('#table').html(html);
                },
                error: function (data) {
                    alert('Xảy ra lôi');
                }
            });
        }                            
    </script>
}

























































































