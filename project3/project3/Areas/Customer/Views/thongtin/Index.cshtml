@section ScriptHome{
    <script>
        // Script mặc định hiển thị trang lúc đăng nhập thành công
        $(function () {
            getid();
        })
        function getid() {
            $.ajax({
                type: 'POST',
                url: '/Home/get',
                dataType: 'json',

                success: function (data) {
                    $('#fullname').val(data.dt.fullname);
                    $('#password').val(data.dt.password);
                    $('#sdt').val(data.dt.sdt);
                    $('#email').val(data.dt.email);
                    $('#cv').val(data.dt.role);
                    $('#ns').val(data.dt.ngaysinh);
                    //
                    $('#myModal').modal('show');
                    $('#btnUpdate').show();
                    $('#btnAdd').hide();
                    $('.modal-title').html('Sửa bản ghi');

                },
                error: function (data) {

                    showmessage("Error:", data.message);
                },
            });
        }

        //sửa trong view người dùng trang đầu tiên
        function Edit() {
            var obj = {
                fullname: $('#fullname').val(),
                Password: $('#password').val(),
                phonenumber: $('#phonenumber').val(),
                Email: $('#email').val(),
                Gioitinh: $('#gioitinh').val(),
                QuocTich: $('#quoctich').val()
            }
            $.ajax({
                url: "/Home/edit",
                data: JSON.stringify(obj),
                type: "POST",//dang dung ham post
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (result) {                  
                    location.reload();//load lai trang
                    alert("sua thanh cong");                 
                },
            });
        }
    </script>

